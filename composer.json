{
    "name": "gm-fire/passport",
    "description": "Fork of fof/Passport The OAuth2 (and Laravel passport) compatible oauth extension",
    "keywords": [
        "flarum",
        "passport",
        "league",
        "oauth",
        "oauth2"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel+flarum@klabbers.email",
            "homepage": "https://hyn.me/"
        },
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/passport/issues",
        "source": "https://github.com/FriendsOfFlarum/passport",
        "forum": "https://discuss.flarum.org/d/5203"
    },
    "homepage": "https://friendsofflarum.org",
    "require": {
        "flarum/core": "^1.2.0",
        "league/oauth2-client": "^2.3.0"
    },
    "replace": {
        "fof/passport": "*"
    },
    "extra": {
        "flarum-extension": {
            "title": "Passport",
            "category": "feature",
            "icon": {
                "name": "fas fa-key",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/5203"
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "autoload": {
        "psr-4": {
            "GmFire\\Passport\\": "src/"
        }
    },
    "require-dev": {
        "flarum/phpstan": "*"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
